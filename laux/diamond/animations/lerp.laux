public class Diamond.Animations.Lerp extends Diamond.AnimationBase
  constructor(index: string|number, goal: number, ...)
    super(...)

    self.animData = {
      index = index,
      goal = goal
    }
  end

  onThink(anim, panel, fraction)
    local { index, goal } = self.animData

    local value = panel[index] ?? 0
    panel[index] = Lerp(fraction, value, goal)
  end
end