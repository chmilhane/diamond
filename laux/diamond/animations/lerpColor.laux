public class Diamond.Animations.LerpColor extends Diamond.AnimationBase
  constructor(index: string|number, goal: table, ...)
    super(...)

    self.animData = {
      index = index,
      goal = goal
    }
  end

  onThink(anim, panel, fraction)
    local { index, goal } = self.animData

    local value = panel[index] ?? color_white
    panel[index] = Diamond.Theme:lerp(fraction, value, goal)
  end
end